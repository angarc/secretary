<h1 class='mt-4'>My Tasks</h1>

<div class='list-group mt-4'>
  <%= render @tasks %>

  <%= simple_form_for Task.new, 
                      url: dashboard_tasks_path(format: :js), 
                      html: {
                        class: '',
                        data: {controller: 'task-form'}
                      }, 
                      remote: true do |f| %>

    <div class='row'>
      <div class='col-lg-10'>
        <div class='list-group-item align-items-center'>
          <div class='row'>
            <%= render 'form', f: f %>
          </div>
        </div>
      </div>

      <div class='col-lg-2 center-vertically-col'>
        <div>
          <%= f.submit 'Add', class: 'btn btn-primary btn-sm' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

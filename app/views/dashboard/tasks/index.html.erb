<h1 class='mt-4'>My Tasks</h1>

<div class='list-group mt-4'>
  <%= render @tasks %>


  <%= simple_form_for Task.new, 
                      url: dashboard_tasks_path(format: :js), 
                      html: {
                        class: 'list-group-item align-items-center',
                        data: {controller: 'task-form'}
                      }, 
                      remote: true do |f| %>

    <div class='row'>
      <%= render 'form', f: f %>
      <div class='col-lg-3'>
        <%= f.submit 'Add', class: 'btn btn-primary w-100' %>
      </div>
    </div>
  <% end %>
</div>

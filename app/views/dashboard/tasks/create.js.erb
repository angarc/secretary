<% if @task.errors.count == 0 %>
  toast("success", "Task was successfully created.")
  var form = document.getElementById('new_task')

  form.insertAdjacentHTML("beforebegin", "<%= j render @task %>");
  form.reset()

  var input = document.getElementById('task_title')
  input.focus();
<% else %>
  toast("danger", "<%= @task.errors.full_messages.to_sentence %>")
<% end %>

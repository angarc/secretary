<h1 class='mt-4'>My Tasks</h1>
<div class='list-group'>
  <% @tasks.each do |task| %>
    <div class='list-group-item'>
      <div class='row'>
        <div class='col-lg-3'>
          <strong>Title:</strong> <%= task.title %>
        </div>

        <div class='col-lg-3'>
          <strong>Deadline:</strong> <%= task.deadline.to_formatted_s(:readable_datetime) %>
        </div>

        <div class='col-lg-3'>
          <strong>Duration (Hours):</strong> <%= task.duration_hours %>
        </div>

        <div class='col-lg-3'>
          <strong>Duration (Minutes):</strong> <%= task.duration_minutes %>
        </div>
      </div>
    </div>
  <% end %>
</div>


<h1 class='mt-4'>My Events</h1>
<div class='list-group'>
  <% @events.each do |event| %>
    <div class='list-group-item'>
      <div class='row'>
        <div class='col-lg-3'>
          <strong>Title:</strong> <%= event.summary %>
        </div>

        <div class='col-lg-3'>
          <strong>Start:</strong> <%= event.start.date_time.to_formatted_s(:readable_datetime) %>
        </div>

        <div class='col-lg-3'>
          <strong>End:</strong> <%= event.end.date_time.to_formatted_s(:readable_datetime) %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class='mt-3'>
  <%= link_to 'Schedule', '', class: 'btn btn-lg btn-primary m-auto' %>
<div>
